GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model Configuration
LLM_MODEL=gemini-1.5-pro
EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIMENSIONS=3072
EMBEDDING_TASK_TYPE=RETRIEVAL_DOCUMENT
MAX_INPUT_TOKENS=2048

# Vector Database Settings
CHROMA_PERSIST_DIRECTORY=./vector_db
COLLECTION_NAME=african_business_knowledge

# Model Parameters
SIMILARITY_THRESHOLD=0.3
MAX_RETRIEVED_CHUNKS=10
CONTEXT_WINDOW=4000
TEMPERATURE=0.3
MAX_TOKENS=1000
TOP_P=0.9
TOP_K=40

# Text Processing
CHUNK_SIZE=1024
CHUNK_OVERLAP=200

# Application Settings
APP_TITLE=UbuntuAI - African Business Intelligence
APP_DESCRIPTION=Your AI-powered guide to African entrepreneurship
CHAT_PLACEHOLDER=Ask me anything about African business, funding, regulations, or market insights...

# Performance Configuration
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# WhatsApp/Twilio Configuration (Optional - for WhatsApp integration)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1415xxxxxxx
WHATSAPP_MAX_MESSAGE_LENGTH=1600
WHATSAPP_SESSION_TIMEOUT=86400
WHATSAPP_MAX_SESSIONS=1000

# Agent Configuration
USE_LANGCHAIN_AGENTS=true
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=120

# Logging
LOG_LEVEL=INFO
LOG_FILE=ubuntuai.log

# Optional: Pinecone (if using instead of ChromaDB)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENV=your_pinecone_environment